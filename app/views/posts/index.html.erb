<h1>一覧画面</h1>
<table>
  <thead>
    <th>title</th>
    <th>body</th>
    <th>genre</th>
  </thead>
  <% @posts.each do |post| %>
    <tr>
      <!-- <td><%= link_to post.title, post_path(post) %></td> -->
      <td><%= link_to post.title, post_path(post, title: post.title) %></td>
      <td><%= post.body %></td>
      <td><%= post.genre.name %></td>
    </tr>
  <% end %>
</table>